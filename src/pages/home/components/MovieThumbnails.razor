@namespace Home
<div class="flex flex-wrap gap-2 justify-center items-stretch text-center">

@foreach(var item in Data)
{
    <div class="bg-slate-700 text-white p-4 rounded-lg flex-1 shadow-lg
    hover:bg-slate-600 cursor-pointer">
        @item.Name
    </div>
}
</div>




@code {
    [Parameter]
    public List<MovieViewModel> Data { get; set; }
}
